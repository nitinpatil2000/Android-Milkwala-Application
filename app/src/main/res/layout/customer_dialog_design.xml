<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/toolbar"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1.8"
            android:text="Select Supplier :"
            android:textColor="@color/white"
            android:textSize="18sp"
           />

        <Spinner
            android:id="@+id/selectSupplierInCustomer"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"
            android:layout_weight="2.2"
            android:background="@android:drawable/btn_dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1.8"
            android:text="Select Products :"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

        <Spinner
            android:id="@+id/selectProductBySupplier"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"
            android:layout_weight="2.2"
            android:background="@android:drawable/btn_dropdown" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1.8"
            android:text="Select Quantity :"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/selectProductQuantity"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"
            android:hint="Enter the Quantity"
            android:textColorHint="@color/white"
            android:paddingStart="15dp"
            android:inputType = "number"
            android:layout_weight="2.2"
            android:background="@drawable/receive_design_curve"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/cancelCustomerDialogButton"
            android:layout_weight="1.8"
            android:text="Cancel"
            android:backgroundTint="@color/teal_200"
            android:textColor="@color/black"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/selectCustomerDialogBtn"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:backgroundTint="@color/teal_200"
            android:text="Add"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />
    </LinearLayout>
</LinearLayout>