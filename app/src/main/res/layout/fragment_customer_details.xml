<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/cardColor"
    tools:context=".customer.CustomerDetailsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Name :"
                    android:layout_marginStart="10dp"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/txtCustomerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edit_design"
                    android:maxLines="3"
                    android:padding="10dp"
                    android:text="Cummins Company"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Address :"
                    android:layout_marginStart="10dp"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/txtCustomerAdd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:background="@drawable/edit_design"
                    android:gravity="top"
                    android:text="Balewadi Pune"
                    android:maxLines="6"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:minLines="4"
                    android:padding="10dp"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="City :"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/txtCustomerCity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:text="pune"
                    android:background="@drawable/edit_design"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Contact No :"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/txtContactNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:inputType="number"
                    android:background="@drawable/edit_design"
                    android:text="8785748574"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/deleteCustomerBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Delete Customer"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="25sp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/ubuntu_light"
            android:backgroundTint="@color/button_background_color"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            />


    </LinearLayout>

</LinearLayout>