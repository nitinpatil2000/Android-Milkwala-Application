<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/cardColor"
    tools:context=".delivery.AddDeliverFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/txt_delivery_name"
                    android:textColor="#000"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/editDeliveryBoyName"
                    android:layout_width="0dp"
                    android:maxLines="1"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:textSize="16sp"
                    android:hint="@string/edit_delivery_name"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:background="@drawable/edit_design"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/txt_delivery_add"
                    android:layout_marginStart="10dp"
                    android:textColor="#000"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/editDeliveryBoyAdd"
                    android:layout_width="0dp"
                    android:hint="@string/edit_delivery_add"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:padding="10dp"
                    android:minLines="4"
                    android:maxLines="6"
                    android:textSize="16sp"
                    android:gravity="top"

                    android:background="@drawable/edit_design"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/txt_delivery_city"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/editDeliveryBoyCity"
                    android:layout_width="0dp"
                    android:hint="@string/edit_delivery_city"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:background="@drawable/edit_design"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/txt_delivery_contact1"
                    android:textColor="#000"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/editDeliveryBoyContact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:textColor="@color/black"
                    android:hint="@string/edit_delivery_contact1"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:background="@drawable/edit_design"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/txt_delivery_contact2"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/editDeliveryBoyAlterNo"
                    android:layout_width="0dp"
                    android:hint="@string/edit_delivery_contact2"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:maxLines="1"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:background="@drawable/edit_design"
                    />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/addNewDeliveryBoyBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Add"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="25sp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:backgroundTint="@color/button_background_color"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>