<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".delivery.AddDeliverFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Deliver Boy Name :"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editDeliveryName"
                    android:layout_width="0dp"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:background="@drawable/edit_design"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Address :"
                    android:textColor="#000"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/editAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:minLines="2"
                    android:maxLines="10"
                    android:background="@drawable/edit_design"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Contact No :"
                    android:textColor="#000"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/editContactNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:background="@drawable/edit_design"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Alternate No :"
                    android:textColor="#000"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/editAlternateNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:maxLines="1"
                    android:inputType="number"
                    android:padding="5dp"
                    android:background="@drawable/edit_design"
                    />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/addNewDeliverBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Add"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="25sp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/ubuntu_light"
            android:backgroundTint="@color/button_background_color"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            />




    </LinearLayout>

</LinearLayout>