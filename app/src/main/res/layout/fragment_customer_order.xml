<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerOrderFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="2"
            android:fontFamily="@font/ubuntu_light"
            android:text="Select Customer :"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/receivedCustomerSpinner"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:minLines = "3"
            android:background="@android:drawable/btn_dropdown" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:id="@+id/savedDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1.4"
            android:background="@drawable/edit_design"
            android:padding="10dp"
            android:text="2022/12/25"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/selectedDate"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_baseline_date_range_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/ubuntu_light"
            android:text="Assign Delivery \nBoy :"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="11dp"
            android:layout_marginStart="11dp"

            android:textStyle="bold" />

        <Spinner
            android:id="@+id/receivedDelivery"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:background="@android:drawable/btn_dropdown" />


    </LinearLayout>

    <View
        android:layout_width="180dp"
        android:layout_height="3dp"
        android:background="@color/black"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"/>


</LinearLayout>