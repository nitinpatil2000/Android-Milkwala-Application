<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".products.ProductViewDetailsFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Product Name :"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtProductName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Ice Cream"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:background="@drawable/edit_design"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Unit :"
                    android:textColor="#000"
                    android:textSize="20dp"/>

<!--                <Spinner-->
<!--                    android:layout_width="0dp"-->
<!--                    android:id="@+id/spinner"-->
<!--                    android:background="@android:drawable/btn_dropdown"-->
<!--                    android:layout_height="35dp"-->
<!--                    android:layout_weight="3"/>-->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:text="1kg"
                    android:textSize="20dp"
                    android:background="@drawable/edit_design"
                    android:id="@+id/txtUnit"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Supplier Rate :"
                    android:textColor="#000"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/editSupplierRate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:text="Rs. 50"
                    android:background="@drawable/edit_design"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Vender Rate :"
                    android:textColor="#000"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/editVenderRate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Rs.100"
                    android:padding="5dp"
                    android:background="@drawable/edit_design"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="MRP :"
                    android:textColor="#000"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/txtProductMrp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:text="Rs.200"
                    android:background="@drawable/edit_design"
                    android:padding="5dp"
                    />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/deleteNewProductBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Delete Product"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="25sp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/btn_design"
            />




    </LinearLayout>
</LinearLayout>