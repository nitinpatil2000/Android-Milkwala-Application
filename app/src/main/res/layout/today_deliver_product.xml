<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/receive_design_curve"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/customerProductsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="7dp"
                android:text="@string/title_product_name"
                android:textColor="@color/black"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/customerProductUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500ml"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="7dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />


        </LinearLayout>

        <TextView
            android:id="@+id/customerProductsQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/receive_design_curve"
            android:text="52"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/receive_design_curve"
            android:text="250"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:id="@+id/customerProductRate"/>

        <EditText
            android:id="@+id/customerEditQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/receive_design_curve"
            android:hint="GQty"
            android:layout_weight="0.8"
            android:maxLines="1"
            android:layout_marginStart="5dp"
            android:padding="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/customerProductAmount"
            android:layout_width="wrap_content"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:background="@drawable/receive_design_curve"
            android:text="10000"
            android:padding="10dp"
            android:textSize="16sp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/checkCustomer"/>



    </LinearLayout>

</LinearLayout>