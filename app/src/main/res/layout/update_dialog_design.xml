<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardColor"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_update_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="15dp"
                android:hint="@string/str_update_title"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <View style="@style/lineHorizontalForUpdateDialog" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_update_new_supplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            style="@style/commonTextViewLabel"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.5"
                            android:text="@string/title_supplier_name" />

                        <EditText
                            android:id="@+id/updateSupplierName"
                            style="@style/commonInputEditText"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:hint="@string/hint_enter_supplier_name" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            style="@style/commonTextViewLabel"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.5"
                            android:text="@string/title_supplier_email" />

                        <EditText
                            android:id="@+id/updateSupplierEmail"
                            style="@style/commonInputEditText"
                            android:layout_width="0dp"
                            android:inputType="textEmailAddress"
                            android:layout_weight="3.5"
                            android:hint="@string/hint_enter_supplier_email"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            style="@style/commonTextViewLabel"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.5"
                            android:text="@string/title_supplier_address" />

                        <EditText
                            android:id="@+id/updateSupplierAddress"
                            style="@style/commonInputEditText"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:gravity="top"
                            android:hint="@string/hint_enter_supplier_address"
                            android:inputType="none"
                            android:maxLines="5"
                            android:autofillHints="address"
                            android:minLines="4" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            style="@style/commonTextViewLabel"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.5"
                            android:text="@string/title_supplier_number" />

                        <EditText
                            android:id="@+id/updateSupplierMobile"
                            style="@style/commonInputEditText"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:autofillHints=""
                            android:hint="@string/hint_enter_supplier_mobile1"
                            android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            style="@style/commonTextViewLabel"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.5"
                            android:text="@string/title_supplier_alternate_number" />

                        <EditText
                            android:id="@+id/updateSupplierAlterMobileNo"
                            style="@style/commonInputEditText"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:autofillHints=""
                            android:hint="@string/hint_enter_supplier_mobile2"
                            android:inputType="number" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom = "5dp"
                android:layout_marginTop = "10dp"
                android:weightSum="4">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="40dp"
                    android:layout_marginStart = "12dp"
                    android:id="@+id/btnActionCancel"
                    android:text="@string/str_cancel"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:background="@drawable/btn_design"/>


                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_gravity="end"
                    android:layout_marginEnd = "12dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnActionUpdate"
                    android:text="@string/str_update"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:background="@drawable/btn_design"/>



            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>